            </div>

            <div class="offcanvas-inner">

                @*<form class="header-search m-tb-15" action="" method="get">*@
                <form class="header-search" asp-action="#" method="get">
                    <div class="header-search__content pos-relative">
                        <input type="search" name="header-search" placeholder="Search" required>
                        <input class="form-control" type="text" placeholder="Search for..." />
