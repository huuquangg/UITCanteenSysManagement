                            </div> <!-- End Logo -->
                            <!-- Start Header Menu -->
                            <div class="header-menu">
                                <nav>
                                    <ul class="header__nav">
                                        <!--Start Single Nav link-->
                                        <li class="header__nav-item pos-relative">
                                            <a href="/HomePageTest/Index" class="header__nav-link">Home</a>
                                        </li> <!-- End Single Nav link-->
                                        <!--Start Single Nav link-->
                                        <li class="header__nav-item pos-relative header__nav-link">
                                            <a href="/Products/Index" class="header__nav-link">Menu</a>
                                        </li> <!-- Start Single Nav link-->
                                        <!--Start Single Nav link-->
                                        <!--Start Single Nav link-->
                                        <li class="header__nav-item pos-relative">
                                            <a href="/Information/Blogs" class="header__nav-link">Blogs</a>

                                        </li> <!-- End Single Nav link-->
                                        <!--Start Single Nav link-->
                                        <li class="header__nav-item pos-relative">
                                            <a href="/Information/ContactUs" class="header__nav-link">Feedbacks</a>

                                        </li> <!-- End Single Nav link-->
                                        <!--Start Single Nav link-->
                                        <li class="header__nav-item pos-relative">
                                            <a href="/Information/AboutUs" class="header__nav-link">About us</a>

                                        </li> <!-- End Single Nav link-->

                                        <li class="header__nav-item pos-relative">
                                            <a href="/Products/Checkout" class="header__nav-link">Check out</a>
                                        </li> <!-- Start Single Nav link-->
                                    </ul>
                                </nav>
                            </div> <!-- End Header Menu -->
                            <!-- Start Wishlist-AddCart -->
                            <ul class="header__user-action-icon">
                                <!-- Start Header Wishlist Box -->
                                @{
                                    var usersInCookie = Request.Cookies["UserInfo"];
                                }
                                @if (usersInCookie != null)
                                {
                                    string User_name = string.Empty;
                                    User_name = userInCookie["FullName"].ToString();

                                    <li>@User_name</li>
                                }
                                else
                                {
                                    <li class="btn btn--medium btn--radius btn--black-hover-green font--bold text-uppercase">
                                        @Html.ActionLink("Login", "Login", "User")
                                    </li>
                                }
                                <!-- Start Header Add Cart Box -->
                                <li>
                                    <a href="/Products/Checkout">
                                        <i class="icon-shopping-cart"></i>
                                        <span class="wishlist-item-count pos-absolute"></span>
                                    </a>
                                </li> <!-- End Header Add Cart Box -->
                            </ul>
                        </div>
                    </div>
                </div>
            </div> <!-- End Header Center area -->
            <!-- Start Header bottom area -->
            <div class="header__bottom p-tb-30">
                <div class="container">
                    <div class="row justify-content-between align-items-center">
                        <!-- Navigation Table to dropdown -->

                        <div class="col-xl-3 col-lg-3">
                            <div class="header-menu-vertical pos-relative">
                                <h4 class="menu-title link--icon-left"><i class="far fa-align-left"></i>Navigation</h4>
                                <ul class="menu-content pos-absolute">
                                    <li class="menu-item"><a href="/Products/Index">Menu</a></li>
                                    <li class="menu-item"><a href="/Products/Checkout"> Check out</a></li>
                                    <li class="menu-item"><a href="/Information/Blogs"> Blogs</a></li>
                                    <li class="menu-item"><a href="/Information/ContactUs"> Feedbacks</a></li>
                                    <li class="menu-item"><a href="/Information/AboutUs"> AboutUs</a></li>
                                    <li class="menu-item"><a href="@Url.Action("Login","User")"> Login</a></li>
