<body>
    <!-- ::::::  Start Header Section  ::::::  -->
    <header>
        <!--  Start Large Header Section   -->
        <div class="header d-none d-lg-block">
            <!-- Start Header Top area -->
            <div class="header__top">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="header__top-content d-flex justify-content-between align-items-center">
                                <div class="header__top-content--left">
                                    <span>UIT Canteen: Delicous like mom's cook</span>
                                </div>
                                <ul class="header__top-content--right user-set-role d-flex">

                                    @{
                                        var userInCookie = Request.Cookies["UserInfo"];
                                    }
                                    @if (userInCookie != null)
                                    {
                                        string User_id = string.Empty;
                                        string email = string.Empty;
                                        email = userInCookie["Email"].ToString();
                                        User_id = userInCookie["idUser"].ToString();

                                        <li>@User_id</li>
                                        <li>Email: @email</li>
                                        <li><a href="@Url.Action("Logout","User")" class="btn">Log out</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- Start Header Top area -->
            <!-- Start Header Center area -->
